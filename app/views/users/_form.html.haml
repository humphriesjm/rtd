= form_for @user, :html => { :class => 'form-horizontal' } do |f|
  = render "shared/error_messages"
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'

  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'text_field'

  .control-group
    = f.label :password, :class => 'control-label'
    .controls
      = f.password_field :password, :class => 'text_field'

  .control-group
    = f.label :password_confirmation, :class => 'control-label'
    .controls
      = f.password_field :password_confirmation, :class => 'text_field'

  .control-group
    = f.label :organization, :class => 'control-label'
    .controls
      = f.text_field :org, :class => 'text_field'

  .control-group
    = f.label :phone, :class => 'control-label'
    .controls
      = f.text_field :phone, :class => 'text_field'

  .control-group
    = f.label :birthdate, :class => 'control-label'
    .controls
      = f.text_field :birthdate, :class => 'text_field'

  .control-group
    = f.label :weight, :class => 'control-label'
    .controls
      = f.text_field :weight, :class => 'text_field'

  .control-group
    = f.label :height, :class => 'control-label'
    .controls
      = f.text_field :height, :class => 'text_field'

  .control-group
    = f.label :gender, :class => 'control-label'
    .controls
      = f.text_field :sex, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), |
      home_registration_path, :class => 'btn'                      |